<h1>Movies</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Year</th>
      <th>Director</th>
      <th>Filming Location</th>
      <th>Country</th>
      <th>Average Rating</th>
      <th>Actors</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.description %></td>
        <td><%= movie.year %></td>
        <td><%= movie.director %></td>
        <td><%= movie.filming_location %></td>
        <td><%= movie.country %></td>
        <td><%= movie.average_stars.round(2) %></td>
        <td><%= movie.actors.map(&:name).join(", ") %></td>
      </tr>
    <% end %>
  </tbody>
</table>